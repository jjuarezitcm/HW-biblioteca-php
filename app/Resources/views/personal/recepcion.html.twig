{% extends "personal/base.html.twig" %}
  
  {% block body %}
  	<div class="container-fluid">
  	    <div class="row">
  	        <div class="col-lg-12">
  	            <h1 class="page-header">Recepci√≥n de libros</h1>
  	        </div>
  	        <!-- /.col-lg-12 -->
  	    </div>
  	    <!-- /.row -->
  	</div>

  	 <div class="row">
          <div class="col-lg-12">
              <div class="panel panel-default">
                  <div class="panel-heading">
                      Entregar un libro
                  </div>
                  <div class="panel-body">
                      <div class="row">
                          <div class="col-lg-12">
                            {% if mensaje is defined %}
                              <p class="text-success">{{mensaje}}</p>
                            {% endif %}

                                  {{ form_start(form) }}                                  
                                  <div class="form-group">
                                    {{ form_label(form.idLibro) }}
                                    {{ form_errors(form.idLibro) }}
                                    {{ form_widget(form.idLibro, {'attr':{'class':'form-control'} }) }}
                                  </div>
                                  {% block form_row %}
                                    {% spaceless %}
                                      {{ form_widget(form.devolver, {'attr':{'class':'btn btn-primary btn-lg btn-block'} }) }}
                                    {% endspaceless %}
                                  {% endblock form_row %}
                                  {{ form_end(form) }}



                          </div>
                          <!-- /.col-lg-6 (nested) -->
                          
                          <!-- /.col-lg-6 (nested) -->
                      </div>
                      <!-- /.row (nested) -->
                  </div>
                  <!-- /.panel-body -->
              </div>
              <!-- /.panel -->
          </div>
          <!-- /.col-lg-12 -->
      </div>
  	<!-- /.container-fluid -->
  {% endblock %}