{% extends "alumno/base.html.twig" %}
  
  {% block body %}
  	<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Catálogo de libros</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Consulta el catálogo
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            {% if mensaje is defined %}
                              <p class="text-success">{{mensaje}}</p>
                            {% endif %}

                            <!--
                            <form role="form">
                                <div class="form-group">
                                    <label>ID del alumno</label>
                                    <input class="form-control">
                                    <!-- <p class="help-block">Example block-level help text here.</p> ->
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">Buscar</button>
                            </form>
                            -->

                            {{ form_start(form) }}
                            <div class="form-group">
                              {{ form_label(form.palabraClave) }}
                              {{ form_errors(form.palabraClave) }}
                              {{ form_widget(form.palabraClave, {'attr':{'class':'form-control'} }) }}
                            </div>
                            {% block form_row %}
                              {% spaceless %}
                                {{ form_widget(form.save, {'attr':{'class':'btn btn-primary btn-lg btn-block'} }) }}
                              {% endspaceless %}
                            {% endblock form_row %}
                            {{ form_end(form) }}


                            
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->

                </div>
                <!-- /.panel-body -->
            </div>

            {% if libros is defined %}

                

                    <!-- <p class="text-success">cero! </p> -->
                <div class="row">
                {% for libro in libros %}
                    
                        <div class="col-lg-4">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    <strong>{{ libro.titulo}}</strong>
                                </div>
                                <div class="panel-body">
                                    <p><strong>isbn:</strong> {{ libro.isbn}}</p>
                                    <p><strong>autor:</strong> {{ libro.autor}}</p>
                                    <p><strong>editorial:</strong> {{ libro.editorial}}</p>
                                    <p><strong>año:</strong> {{ libro.anio}}</p>
                                    <p><strong>paginas:</strong> {{ libro.paginas}}</p>
                                </div>
                                <div class="panel-footer">
                                    <strong>ubicacion:</strong> {{ libro.ubicacion}}
                                </div>
                            </div>
                        </div>
                    
                {% endfor %}
                </div>
                
            {% endif %}



