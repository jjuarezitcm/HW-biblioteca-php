{% extends "admin/base.html.twig" %}
  
  {% block body %}
  	<div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Alta alumnos</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Datos
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                  {% if mensaje is defined %}
                                    <p class="text-success">{{mensaje}}</p>
                                  {% endif %}



                                        {{ form_start(form) }}
                                        <div class="form-group">
                                          {{ form_label(form.matricula) }}
                                          {{ form_errors(form.matricula) }}
                                          {{ form_widget(form.matricula, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.nombre) }}
                                          {{ form_errors(form.nombre) }}
                                          {{ form_widget(form.nombre, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.apellidoPaterno) }}
                                          {{ form_errors(form.apellidoPaterno) }}
                                          {{ form_widget(form.apellidoPaterno, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.apellidoMaterno) }}
                                          {{ form_errors(form.apellidoMaterno) }}
                                          {{ form_widget(form.apellidoMaterno, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.direccion) }}
                                          {{ form_errors(form.direccion) }}
                                          {{ form_widget(form.direccion, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.telefono) }}
                                          {{ form_errors(form.telefono) }}
                                          {{ form_widget(form.telefono, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.email) }}
                                          {{ form_errors(form.email) }}
                                          {{ form_widget(form.email, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.carrera) }}
                                          {{ form_errors(form.carrera) }}
                                          {{ form_widget(form.carrera, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.username) }}
                                          {{ form_errors(form.username) }}
                                          {{ form_widget(form.username, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.password.first) }}
                                          {{ form_errors(form.password.first) }}
                                          {{ form_widget(form.password.first, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        <div class="form-group">
                                          {{ form_label(form.password.second) }}
                                          {{ form_errors(form.password.second) }}
                                          {{ form_widget(form.password.second, {'attr':{'class':'form-control'} }) }}
                                        </div>
                                        
                                        {% block form_row %}
                                          {% spaceless %}
                                            {{ form_widget(form.registrar, {'attr':{'class':'btn btn-primary btn-lg btn-block'} }) }}
                                          {% endspaceless %}
                                        {% endblock form_row %}
                                        {{ form_end(form) }}

                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                
                                <!-- /.col-lg-6 (nested) -->


                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    {% if libros is defined %}

                        

                            <!-- <p class="text-success">cero! </p> -->
                        <div class="row">
                        {% for libro in libros %}
                            
                                <div class="col-lg-4">
                                    <div class="panel panel-success">
                                        <div class="panel-heading">
                                            {{ libro.titulo}}
                                        </div>
                                        <div class="panel-body">
                                            <p>{{ libro.titulo }} <a href="{{ path('modificar_libro', {'id': libro.id}) }}">modificar</a></p>
                                        </div>
                                        <div class="panel-footer">
                                            ubicacion: 
                                        </div>
                                    </div>
                                </div>
                            
                        {% endfor %}
                        </div>
                        
                    {% endif %}
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.container-fluid -->
  {% endblock %}