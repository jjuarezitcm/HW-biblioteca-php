{% extends "admin/base.html.twig" %}
  
  {% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Consulta de libros</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Buscar libro
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                          {% if mensaje is defined %}
                            <p class="text-success">{{mensaje}}</p>
                          {% endif %}



                                {{ form_start(form) }}
                                <div class="form-group">
                                  {{ form_label(form.terminoABuscar) }}
                                  {{ form_errors(form.terminoABuscar) }}
                                  {{ form_widget(form.terminoABuscar, {'attr':{'class':'form-control'} }) }}
                                </div>
                                
                                {% block form_row %}
                                  {% spaceless %}
                                    {{ form_widget(form.prestar, {'attr':{'class':'btn btn-primary btn-lg btn-block'} }) }}
                                  {% endspaceless %}
                                {% endblock form_row %}
                                {{ form_end(form) }}

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        
                        <!-- /.col-lg-6 (nested) -->


                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            {% if libros is defined %}

                

                    <!-- <p class="text-success">cero! </p> -->
                <div class="row">
                {% for libro in libros %}
                    
                        <div class="col-lg-4">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    {{ libro.titulo}}
                                </div>
                                <div class="panel-body">
                                    <p><strong>id:</strong> {{ libro.id}}</p>
                                    <p><strong>isbn:</strong> {{ libro.isbn}}</p>
                                    <p><strong>autor:</strong> {{ libro.autor}}</p>
                                    <p><strong>editorial:</strong> {{ libro.editorial}}</p>
                                    <p><strong>a√±o:</strong> {{ libro.anio}}</p>
                                    <p><strong>paginas:</strong> {{ libro.paginas}}</p>
                                </div>
                                <div class="panel-footer">
                                    <p><a href="{{ path('modificar_libro', {'id': libro.id}) }}">Modificar</a> | <a href="{{ path('eliminar_libro', {'id': libro.id}) }}" onclick="return confirm('Seguro?');">Eliminar</a></p>
                                </div>
                            </div>
                        </div>
                    
                {% endfor %}
                </div>
                
            {% endif %}
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.container-fluid -->
  {% endblock %}