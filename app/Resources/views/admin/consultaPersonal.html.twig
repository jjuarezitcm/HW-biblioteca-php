{% extends "admin/base.html.twig" %}
  
  {% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Consulta de personal</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Buscar personal
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                          {% if mensaje is defined %}
                            <p class="text-success">{{mensaje}}</p>
                          {% endif %}



                                {{ form_start(form) }}
                                <div class="form-group">
                                  {{ form_label(form.emailABuscar) }}
                                  {{ form_errors(form.emailABuscar) }}
                                  {{ form_widget(form.emailABuscar, {'attr':{'class':'form-control'} }) }}
                                </div>
                                
                                {% block form_row %}
                                  {% spaceless %}
                                    {{ form_widget(form.buscar, {'attr':{'class':'btn btn-primary btn-lg btn-block'} }) }}
                                  {% endspaceless %}
                                {% endblock form_row %}
                                {{ form_end(form) }}

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        
                        <!-- /.col-lg-6 (nested) -->


                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            {% if alumnos is defined %}

                    <!-- <p class="text-success">cero! </p> -->
                <div class="row">
                
                    
                        <div class="col-lg-4">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    <strong>Nombre de usuario: </strong>{{ alumnos.username}}
                                </div>
                                <div class="panel-body">
                                    <p><strong>Email: </strong>{{ alumnos.email }} </p>
                                </div>
                                <div class="panel-footer">
                                    <p><a href="{{ path('modificar_personal', {'id': alumnos.id}) }}">modificar</a> | <a href="{{ path('eliminar_personal', {'id': alumnos.id}) }}" onclick="return confirm('Seguro?');">eliminar</a></p>
                                </div>
                            </div>
                        </div>
                    
                
                </div>
                
            {% endif %}
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.container-fluid -->
  {% endblock %}